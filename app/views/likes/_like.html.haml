- if user_signed_in?
  - if item.like_user(current_user.id)
    .item-button-container__left__dislike
      =link_to user_item_like_path(current_user, item, like), method: "DELETE", remote: true do
        %i.fas.fa-heart
        %span いいね！
        %span 
          = item.likes_count
  - else
    .item-button-container__left__like
      =link_to user_item_likes_path(current_user, item), method: "POST", remote: true do
        %i.fas.fa-heart
        %span いいね！
        %span
          = item.likes_count
-else
  .item-button-container__left__like
    %i.fas.fa-heart
      %span いいね！
      %span 
        = item.like_count