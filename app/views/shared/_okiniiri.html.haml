- if @likes.present?
  .TSmain_category_box_lists
    - @items.each do |item|
      .TSmain_category_box_lists_list
      = link_to item_path(item), class: "TSmain_category_box_lists_list_link" do
        %figure.TSmain_category_box_lists_list_img
          = image_tag "#{item.images[0].url}", width: "100", height: '100'
          -if item.buyer_id.present? 
            .TSmain_category_box_lists_list_img__sold
              .TSmain_category_box_lists_list_img__sold__inner
                SOLD
        .TSmain_category_box_lists_list_menu
          %h3.TSmain_category_box_lists_list_menu_title
            =item.name
          .TSmain_category_box_lists_list_menu_money
            %ul
              %li
                ¥  #{item.price}
              %li
                いいね！#{item.likes_count}
            %p
              (税込)