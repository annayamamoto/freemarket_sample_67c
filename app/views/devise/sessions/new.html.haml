= render "shared/user-header"
.user-wrapper 
  .user-menter-top
    ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .user-menter-top-aaa
      .user-field
        = f.label :email, class: "user-ioioio"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class:"user-menter-toptop"
      .user-field
        = f.label :password, class: "user-ioioio"
        %br/
        = f.password_field :password, autocomplete: "current-password", class:"user-menter-toptop"
      - if devise_mapping.rememberable?
        .user-field
          = f.check_box :remember_me
          = f.label :remember_me
      .user-actions
        = f.submit "ログイン", class: "user-foo"
= render "shared/user-footer"
